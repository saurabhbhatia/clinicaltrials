<p id="notice"><%= notice %></p>

<p>
  <b>Topic:</b>
  <%= @event.topic %>
</p>

<p>
  <b>From Date:</b>
  <% e = @event.date %><%=  e.strftime("%d %B %Y") %> 
</p>

<p>
  <b>To Date:</b>
  <% t = @event.todate %><%=  t.strftime("%d %B %Y") %>
</p>

<p>
  <b>Organization:</b>
  <%= @event.organization %>
</p>

<p>
  <b>More info:</b>
  <%= @event.more_info %>
</p>
<p>
  <b>Address:</b>
<%= @event.location %>
</p>


<p>
  <b>Location:</b>
<%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=14&markers=#{@event.latitude}%2C#{@event.longitude}" %>
</p>


