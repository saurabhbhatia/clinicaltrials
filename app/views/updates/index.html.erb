<h1>Listing updates</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Overview</th>
    <th>Description</th>
    <th>References</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @updates.each do |update| %>
  <tr>
    <td><%= update.title %></td>
    <td><%= update.overview %></td>
    <td><%= update.description %></td>
    <td><%= update.references %></td>
    <td><%= link_to 'Show', update %></td>
    <td><%= link_to 'Edit', edit_update_path(update) %></td>
    <td><%= link_to 'Destroy', update, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

