  <%= javascript_include_tag "/javascripts/ckeditor/ckeditor.js" %>
  <%= semantic_form_for [:admin, @drug_info], :multipart => true do |f| %>
    <%= f.inputs :title %>
    <%= f.input :action, :input_html => { :class => "ckeditor" } %>
    <%= f.input :indications, :input_html => { :class => "ckeditor" } %>
